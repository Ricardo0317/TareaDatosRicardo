<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 15; -fx-background-color: WHITHE;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="business.ControladorCurso">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestión de Cursos " />
    
    <Label prefHeight="27.0" prefWidth="91.0" text="Lista de Cursos:" />
    <TextArea fx:id="txtAreaCursos" editable="false" prefHeight="150" />
     
        <Label text="Sigla:" />
     <TextField fx:id="txtSigla" promptText="EIF-200" />
     
        <Label text="Nombre:" />
     <TextField fx:id="txtNombre" promptText="Introducción" />
     
        <Label text="Créditos:" />
     <TextField fx:id="txtCreditos" promptText="3" />
    
    <HBox spacing="10">
        <Button fx:id="btnAgregar" onAction="#agregarCurso" style="-fx-background-color: BLACK -fx-text-fill: white; -fx-min-width: 80;" text="Agregar" />
        
        <Button fx:id="btnBuscar" onAction="#buscarCurso" style="-fx-background-color: BLACK -fx-text-fill: white; -fx-min-width: 80;" text="Buscar" />
        
        <Button fx:id="btnEliminar" onAction="#eliminarCurso" style="-fx-background-color: BLACK -fx-text-fill: white; -fx-min-width: 80;" text="Eliminar" />
        
    </HBox>
    
</VBox>
